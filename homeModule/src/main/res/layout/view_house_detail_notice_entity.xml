<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_first"
            android:textColor="@color/text_one"
            android:drawableLeft="@drawable/ic_admission_b"
            android:text="入驻须知"
            android:drawablePadding="@dimen/dp_4"/>
        <TextView
            android:id="@+id/tv_detail_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/order_txt_size"
            android:textColor="@color/text_one"
            android:text="入住时间：入住日14:00后\n退房时间：离店日12:00后\n接待时间：00:00 ~ 24:00"
            android:paddingBottom="@dimen/dp_10"/>

    </LinearLayout>



</android.support.v7.widget.CardView>