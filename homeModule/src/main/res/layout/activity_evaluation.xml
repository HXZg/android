<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_left_n"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp_10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_sp"
            android:textColor="@color/title_color"
            android:layout_gravity="center"
            android:text="评价"/>
    </FrameLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/dp_14"
        android:paddingVertical="@dimen/dp_14">
        <ImageView
            android:id="@+id/iv_evaluation_img"
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:background="@color/colorAccent"/>
        <TextView
            android:id="@+id/tv_evaluation_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_10"
            app:layout_constraintLeft_toRightOf="@id/iv_evaluation_img"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="@dimen/order_txt_size"
            android:textColor="@color/text_one"
            android:text="【琶洲会展】近珠江新城/太古汇北欧风三居"
            />
        <TextView
            android:id="@+id/tv_evaluation_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_evaluation_name"
            app:layout_constraintTop_toBottomOf="@id/tv_evaluation_name"
            android:layout_marginTop="@dimen/dp_10"
            android:text="10月10日 - 10月11日 共 1 晚"
            android:textSize="@dimen/order_txt_size"
            android:textColor="@color/text_two"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/iv_evaluation_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_14"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_first"
                    android:textColor="@color/text_one"
                    android:text="请选择评分"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="@dimen/dp_4"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:paddingHorizontal="@dimen/dp_14">

                    <com.coorchice.library.SuperTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:solid="#FF4E2B"
                        app:corner="4dp"
                        android:padding="@dimen/dp_4"
                        android:text="1"
                        android:gravity="center"
                        android:textSize="@dimen/text_first"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/dp_14"/>
                    <com.coorchice.library.SuperTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:solid="#D9D9D9"
                        app:corner="4dp"
                        android:padding="@dimen/dp_4"
                        android:text="2"
                        android:gravity="center"
                        android:textSize="@dimen/text_first"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/dp_14"/>

                    <com.coorchice.library.SuperTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:solid="#D9D9D9"
                        app:corner="4dp"
                        android:padding="@dimen/dp_4"
                        android:text="3"
                        android:gravity="center"
                        android:textSize="@dimen/text_first"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/dp_14"/>

                    <com.coorchice.library.SuperTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:solid="#D9D9D9"
                        app:corner="4dp"
                        android:padding="@dimen/dp_4"
                        android:text="4"
                        android:gravity="center"
                        android:textSize="@dimen/text_first"
                        android:textColor="@color/colorWhite"
                        android:layout_marginRight="@dimen/dp_14"/>
                    <com.coorchice.library.SuperTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:solid="#D9D9D9"
                        app:corner="4dp"
                        android:padding="@dimen/dp_4"
                        android:text="5"
                        android:gravity="center"
                        android:textSize="@dimen/text_first"
                        android:textColor="@color/colorWhite"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_put_evaluation"
            android:layout_width="0dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@id/cv_score"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/dp_14"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_first"
                    android:textColor="@color/text_one"
                    android:text="发布你的看法"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="@dimen/dp_10"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:textSize="@dimen/text_second"
                    android:textColorHint="@color/hint_color"
                    android:hint="多行输入"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/dp_10"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <com.coorchice.library.SuperTextView
            android:id="@+id/stv_evaluation_commit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            app:layout_constraintTop_toBottomOf="@id/cv_put_evaluation"
            app:solid="@color/btn_bg"
            app:corner="24dp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_second"
            android:text="提交"
            android:gravity="center"
            android:paddingVertical="@dimen/dp_10"/>
    </android.support.constraint.ConstraintLayout>

</LinearLayout>