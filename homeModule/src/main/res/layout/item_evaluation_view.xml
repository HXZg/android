<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false"
    android:layout_marginTop="@dimen/dp_10">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_14">

        <ImageView
            android:id="@+id/iv_evaluation_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <TextView
            android:id="@+id/tv_evaluation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/iv_evaluation_img"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/text_second"
            android:textColor="@color/text_black"
            android:text="来自星星的你"/>
        <TextView
            android:id="@+id/tv_evaluation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_evaluation_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_evaluation_name"
            app:layout_constraintBottom_toBottomOf="@id/iv_evaluation_img"
            android:textSize="@dimen/order_txt_size"
            android:textColor="@color/text_two"
            android:text="2018.10.20 12:20"/>
        <TextView
            android:id="@+id/tv_evaluation_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/price_color"
            android:textSize="34sp"
            android:text="5.0"/>

        <TextView
            android:id="@+id/tv_evaluation_des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_evaluation_img"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/text_third"
            android:textColor="@color/text_two"
            android:text="以前几乎都没有认真评价过，不知道浪费了多少积分。听说评价超过一百个字有送积分，基本上每个星期都会光顾，统一评论"/>


        <ImageView
            android:id="@+id/iv_evaluation_one"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_evaluation_des"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_evaluation_two"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_evaluation_two"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_evaluation_one"
            app:layout_constraintLeft_toRightOf="@id/iv_evaluation_one"
            app:layout_constraintRight_toLeftOf="@id/iv_evaluation_three"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginRight="@dimen/dp_10"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/iv_evaluation_three"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/iv_evaluation_one"
            app:layout_constraintLeft_toRightOf="@id/iv_evaluation_two"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintDimensionRatio="1:1"
            android:scaleType="fitXY"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>