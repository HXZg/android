<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.bigkoo.convenientbanner.ConvenientBanner
        android:id="@+id/cb_house_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="H,16:9"
        android:background="@color/colorAccent" />

    <TextView
        android:id="@+id/tv_house_detail_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:paddingRight="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/cb_house_img"
        android:textSize="@dimen/text_second"
        android:textColor="@color/text_one"
        android:text="【琶洲会展】近珠江新城/太古汇北欧风三居"
        />
    <TextView
        android:id="@+id/tv_house_detail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        app:layout_constraintTop_toBottomOf="@id/tv_house_detail_name"
        app:layout_constraintLeft_toLeftOf="@id/tv_house_detail_name"
        android:textSize="@dimen/text_second"
        android:textColor="@color/text_two"
        android:text="广州市天河区珠江新城华夏路16号"/>
    <TextView
        android:id="@+id/tv_house_detail_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_house_detail_address"
        app:layout_constraintLeft_toLeftOf="@id/tv_house_detail_address"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/text_second"
        android:textColor="@color/text_two"
        android:text="距离100米  一房一厅  北欧风格"/>
    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="@dimen/dp_14"
        android:src="@drawable/home_right_n"
        app:layout_constraintBottom_toBottomOf="@id/tv_house_detail_des"
        app:layout_constraintTop_toBottomOf="@id/cb_house_img"/>

    <android.support.constraint.Group
        android:id="@+id/group_des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="tv_house_detail_name,tv_house_detail_address,
tv_house_detail_des,iv_right" />

    <TextView
        android:id="@+id/tv_settled_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_second"
        android:textColor="@color/text_one"
        android:text="@string/home_settled"
        app:layout_constraintTop_toBottomOf="@id/tv_house_detail_des"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv_leave_detail"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center" />
    <TextView
        android:id="@+id/tv_leave_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/tv_settled_detail"
        app:layout_constraintTop_toTopOf="@id/tv_settled_detail"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="@dimen/text_second"
        android:textColor="@color/text_one"
        android:text="@string/home_leave"
        android:gravity="center"
        />
    <com.coorchice.library.SuperTextView
        android:id="@+id/stv_settled_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_settled_detail"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/tv_settled_detail"
        android:layout_marginTop="@dimen/dp_4"
        app:solid="@color/put_bg_color"
        app:stroke_color="@color/put_stroke_color"
        app:stroke_width="1dp"
        android:paddingVertical="@dimen/dp_10"
        app:corner="5dp"
        android:textSize="@dimen/text_second"
        android:textColor="@color/hint_color"
        android:text="10月11日"
        android:gravity="center"
        />
    <com.coorchice.library.SuperTextView
        android:id="@+id/stv_leave_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_settled_detail"
        app:layout_constraintLeft_toLeftOf="@id/tv_leave_detail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_4"
        app:solid="@color/put_bg_color"
        app:stroke_color="@color/put_stroke_color"
        app:stroke_width="1dp"
        android:paddingVertical="@dimen/dp_10"
        app:corner="5dp"
        android:textSize="@dimen/text_second"
        android:textColor="@color/hint_color"
        android:text="10月11日"
        android:gravity="center"
        />

    <include
        android:id="@+id/view_evaluation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/stv_settled_time"
        android:layout_marginTop="@dimen/dp_10"
        layout="@layout/view_house_detail_evaluation"/>

    <include
        android:id="@+id/view_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/view_evaluation"
        android:layout_marginTop="@dimen/dp_10"
        layout="@layout/view_house_detail_msg"/>

    <include
        android:id="@+id/view_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/view_message"
        android:layout_marginTop="@dimen/dp_10"
        layout="@layout/view_house_detail_device"/>

    <include
        android:id="@+id/view_notice_entity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/view_device"
        android:layout_marginTop="@dimen/dp_10"
        layout="@layout/view_house_detail_notice_entity"/>

    <include
        android:id="@+id/view_other_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/view_notice_entity"
        android:layout_marginTop="@dimen/dp_10"
        layout="@layout/view_house_detail_price"/>

    <include
        android:id="@+id/view_landlord"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/view_other_price"
        android:layout_marginTop="@dimen/dp_10"
        layout="@layout/view_house_detail_landlord"/>

    <FrameLayout
        android:id="@+id/fl_report"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        app:layout_constraintTop_toBottomOf="@id/view_landlord"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_first"
            android:textColor="@color/text_one"
            android:text="举报该房源"
            android:drawableLeft="@drawable/ic_report_n"
            android:drawablePadding="@dimen/dp_4"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_right_n"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/dp_10"/>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>