<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/title_sp"
            android:textColor="@color/title_color"
            android:text="订单"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/view_error"/>
        <include layout="@layout/view_loading"/>
        <include layout="@layout/view_check_net"/>
        <FrameLayout
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7f7">
            <FrameLayout
                android:id="@+id/fl_order_login"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <com.coorchice.library.SuperTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_72"
                    android:layout_marginRight="@dimen/dp_72"
                    app:solid="@color/colorPrimary"
                    android:paddingVertical="@dimen/dp_14"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_first"
                    android:text="登录"
                    android:gravity="center"
                    app:corner="30dp"
                    android:visibility="visible"/>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingHorizontal="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:background="#FFD529">

                <TextView
                    android:id="@+id/tv_order_all"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/order_txt_size"
                    android:textColor="@color/select_white_black_txt"
                    android:text="@string/order_all_txt"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tv_order_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/order_txt_size"
                    android:textColor="@color/select_white_black_txt"
                    android:text="@string/order_confirm_txt"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tv_order_reservation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/order_txt_size"
                    android:textColor="@color/select_white_black_txt"
                    android:text="@string/order_reservation_txt"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tv_order_evaluation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/order_txt_size"
                    android:textColor="@color/select_white_black_txt"
                    android:text="@string/order_evaluation_txt"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tv_order_cancel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/order_txt_size"
                    android:textColor="@color/select_white_black_txt"
                    android:text="@string/order_cancel_txt"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tv_order_refund"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/order_txt_size"
                    android:textColor="@color/select_white_black_txt"
                    android:text="@string/order_refund_txt"
                    android:gravity="right"/>
                <TextView
                    android:id="@+id/tv_order_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/order_txt_size"
                    android:textColor="@color/select_white_black_txt"
                    android:text="@string/order_complete_txt"
                    android:gravity="right"/>
            </LinearLayout>
            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/swipe_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_40">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_order"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dp_14"
                    android:paddingRight="@dimen/dp_14"/>
            </android.support.v4.widget.SwipeRefreshLayout>
        </FrameLayout>

    </FrameLayout>

</LinearLayout>