<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:layout_gravity="bottom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_second"
        android:textColor="@color/text_black"
        android:text="选择分享途径"
        android:gravity="center"
        android:padding="@dimen/dp_14"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_14">

        <TextView
            android:id="@+id/tv_share_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_third"
            android:textColor="@color/text_black"
            android:drawableTop="@drawable/ic_sweixin"
            android:text="微信好友"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_share_moments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_third"
            android:textColor="@color/text_black"
            android:drawableTop="@drawable/ic_moments"
            android:text="朋友圈"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_share_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_third"
            android:textColor="@color/text_black"
            android:drawableTop="@drawable/ic_weibo"
            android:text="微博"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_third"
            android:textColor="@color/text_black"
            android:drawableTop="@drawable/ic_qq"
            android:text="QQ好友"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_10"
            />
        <TextView
            android:id="@+id/tv_share_qzone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/text_third"
            android:textColor="@color/text_black"
            android:drawableTop="@drawable/ic_qzone"
            android:text="QQ空间"
            android:gravity="center"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/dp_10"
            />

    </LinearLayout>

    <Button
        android:id="@+id/btn_share_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_second"
        android:textColor="@color/text_black"
        android:text="取消"
        android:background="@drawable/shape_white_gray_r3"
        android:layout_marginLeft="@dimen/dp_72"
        android:layout_marginRight="@dimen/dp_72"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/dp_30"/>

</LinearLayout>