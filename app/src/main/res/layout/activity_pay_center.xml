<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="选择支付方式"
            android:background="@color/colorPrimary"
            android:gravity="center" />

        <TextView
            android:id="@+id/tv_pay_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="@dimen/dp_14"
            android:text="微信支付"
            android:drawableLeft="@drawable/ic_weixin"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dp_10"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>
        <TextView
            android:id="@+id/tv_pay_ali"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="@dimen/dp_14"
            android:text="支付宝支付"
            android:drawableLeft="@drawable/ic_zhifubao"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"/>

        <FrameLayout
            android:id="@+id/fl_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/dp_14">
            <com.coorchice.library.SuperTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                app:corner="19dp"
                app:solid="@color/btn_bg"
                android:paddingHorizontal="@dimen/dp_40"
                android:paddingVertical="@dimen/dp_10"
                android:text="取消"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>